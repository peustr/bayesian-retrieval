#!/bin/sh
#SBATCH -o ./output/logs/%A.out
#SBATCH -e ./output/logs/%A.err
#SBATCH --partition=gpu
#SBATCH --gpus-per-node=1
#SBATCH --time=72:00:00
# Set-up the environment.
source ${HOME}/.bashrc
# Activate env.
conda activate bret

CUDA_VISIBLE_DEVICES=0 python src/bret/scripts/encode_corpus.py \
    --dataset_id msmarco \
    --model_name bert-base \
    --encoder_ckpt output/trained_encoders/bert-base-bret.pt \
    --method bret \
    --batch_size 32 \
    --num_samples 30 \
    --max_psg_len 256 \
    --output_dir output/embeddings

CUDA_VISIBLE_DEVICES=0 python src/bret/scripts/eval_retriever.py \
    --dataset_id msmarco \
    --split dev \
    --model_name bert-base \
    --encoder_ckpt output/trained_encoders/bert-base-bret.pt \
    --method bret \
    --num_samples 30 \
    --max_qry_len 32 \
    --k 20 \
    --embeddings_dir output/embeddings \
    --run_dir output/runs \
    --output_dir output/results
